<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings - Whatdyawant?</title>
    <!-- Supabase JS CDN, place this before your own scripts -->
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2.39.5/dist/umd/supabase.min.js"></script>
    <script src="supabase.js"></script>
    <link rel="stylesheet" href="assets/css/main.css">
</head>
<body>
    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" aria-controls="sidebar" aria-expanded="false" aria-label="Open menu">‚ò∞</button>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <div class="logo-icon">üéÅ</div>
                <h1>Whatdyawant?</h1>
            </div>
        </div>

        <nav class="sidebar-nav">
            <a href="dashboard.html" class="nav-item">
                <span>üè†</span>
                <span>Dashboard</span>
            </a>
            <a href="my-wishlist.html" class="nav-item">
                <span>‚ù§Ô∏è</span>
                <span>My Wishlist</span>
            </a>
            <a href="friends-wishlists.html" class="nav-item">
                <span>üë•</span>
                <span>Friends' Wishlists</span>
            </a>
            <a href="shopping-list.html" class="nav-item">
                <span>üõçÔ∏è</span>
                <span>My Shopping List</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <div class="user-profile">
                <div class="avatar" id="sidebarAvatar">U</div>
                <div class="user-info">
                    <div class="user-name" id="sidebarUserName">User</div>
                    <div class="user-email" id="sidebarUserEmail">user@email.com</div>
                </div>
            </div>
            <div class="footer-buttons">
                <a href="settings.html" class="btn-small">‚öôÔ∏è Settings</a>
                <button class="btn-small" onclick="logout()">üö™ Logout</button>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="page-header">
            <h2>‚öôÔ∏è Settings</h2>
            <p>Manage your profile and preferences</p>
        </div>

        <!-- Profile Settings -->
        <div class="settings-card">
            <h3>Profile Information</h3>
            
            <div class="profile-header">
                <div class="avatar-large" id="profileAvatar">U</div>
                <div class="profile-info">
                    <h2 id="profileDisplayName">Your Name</h2>
                    <p id="profileDisplayUsername">@username</p>
                </div>
            </div>

            <form id="profileForm">
                <div class="form-row">
                    <div class="form-group">
                        <label for="fullName">Full Name</label>
                        <input type="text" id="fullName" required>
                    </div>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" required pattern="[a-zA-Z0-9_]+" minlength="3">
                    </div>
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" required>
                </div>

                <div class="form-group">
                    <label for="currency">Preferred Currency</label>
                    <select id="currency" required>
                        <option value="GBP">¬£ GBP - British Pound</option>
                        <option value="USD">$ USD - US Dollar</option>
                        <option value="EUR">‚Ç¨ EUR - Euro</option>
                        <option value="NOK">kr NOK - Norwegian Krone</option>
                        <option value="SEK">kr SEK - Swedish Krona</option>
                        <option value="DKK">kr DKK - Danish Krone</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">
                    üíæ Save Changes
                </button>
            </form>
        </div>

        <!-- Danger Zone -->
        <div class="settings-card danger-zone">
            <h3>‚ö†Ô∏è Admin Access</h3>
            
            <div class="warning-box">
                <p><strong>Warning:</strong> This will reveal who has claimed items on your wishlist!</p>
                <p>Only use this if you need to manage your wishlist for administrative purposes. <strong>This will spoil the surprise!</strong></p>
            </div>

            <button class="btn btn-danger" onclick="showSpoilers()">
                üëÅÔ∏è Spoil the Surprise - View Claims
            </button>

            <!-- Spoiler Section (Hidden by default) -->
            <div class="spoiler-section" id="spoilerSection">
                <div class="spoiler-header">
                    <span style="font-size: 32px;">üéÅ</span>
                    <h4>Who Claimed What on Your List</h4>
                </div>

                <div class="claims-list" id="claimsList">
                    <!-- Claims will be populated here -->
                </div>

                <button class="btn btn-hide" onclick="hideSpoilers()">
                    Hide This Information
                </button>
            </div>
        </div>
    </main>

    <script>
            // Supabase-powered settings page using public.profiles table

            let currentUserId = null;
            let currentProfile = null;

            window.addEventListener('DOMContentLoaded', async function() {
                // Get current user from Supabase Auth
                const { data: { user } } = await supabase.auth.getUser();
                if (!user) {
                    window.location.href = 'login.html';
                    return;
                }
                currentUserId = user.id;

                // Load profile from public.profiles
                const { data: profiles, error } = await supabase
                    .from('profiles')
                    .select('*')
                    .eq('id', currentUserId)
                    .single();

                if (error || !profiles) {
                    alert("Couldn't load profile info.");
                    return;
                }
                currentProfile = profiles;

                // Update sidebar
                document.getElementById('sidebarUserName').textContent = currentProfile.full_name || user.email.split('@')[0];
                document.getElementById('sidebarUserEmail').textContent = user.email;
                const sidebarInitial = (currentProfile.full_name || user.email)[0].toUpperCase();
                document.getElementById('sidebarAvatar').textContent = sidebarInitial;

                // Update profile section
                document.getElementById('profileDisplayName').textContent = currentProfile.full_name || user.email.split('@')[0];
                document.getElementById('profileDisplayUsername').textContent = `@${currentProfile.username || user.email.split('@')[0]}`;
                document.getElementById('profileAvatar').textContent = sidebarInitial;

                // Populate form
                document.getElementById('fullName').value = currentProfile.full_name || '';
                document.getElementById('username').value = currentProfile.username || '';
                document.getElementById('email').value = user.email;
                document.getElementById('currency').value = currentProfile.currency || 'GBP';
            });

            // Handle profile form submission
            document.getElementById('profileForm').addEventListener('submit', async function(e) {
                e.preventDefault();

                const fullName = document.getElementById('fullName').value;
                const username = document.getElementById('username').value;
                const currency = document.getElementById('currency').value;

                // Update profile in public.profiles
                const { error } = await supabase
                    .from('profiles')
                    .update({
                        full_name: fullName,
                        username: username,
                        currency: currency,
                        updated_at: new Date().toISOString()
                    })
                    .eq('id', currentUserId);

                if (error) {
                    alert('Error updating profile: ' + error.message);
                    return;
                }

                alert('‚úì Profile updated successfully!');
                setTimeout(() => window.location.reload(), 500);
            });

            // Username validation
            document.getElementById('username').addEventListener('input', function(e) {
                this.value = this.value.replace(/[^a-zA-Z0-9_]/g, '');
            });

            // Spoiler: Show claims on your wishlist (from DB)
            async function showSpoilers() {
                if (!confirm('Are you SURE? This will reveal who claimed items on your wishlist and spoil the surprise!')) {
                    return;
                }
                // Load wishlist items for current user
                const { data: wishlistItems, error: wError } = await supabase
                    .from('wishlist_items')
                    .select('id, name')
                    .eq('user_id', currentUserId);

                // Load claims for these items
                let claims = [];
                if (wishlistItems && wishlistItems.length > 0) {
                    const itemIds = wishlistItems.map(item => item.id);
                    const { data: claimsData, error: cError } = await supabase
                        .from('claims')
                        .select('item_id, claimed_by')
                        .in('item_id', itemIds);

                    claims = claimsData || [];
                }

                // Compose claim list
                const claimsList = document.getElementById('claimsList');
                if (!wishlistItems || wishlistItems.length === 0) {
                    claimsList.innerHTML = '<p style="color: #6b7280; text-align: center;">You don\'t have any items on your wishlist yet.</p>';
                } else {
                    claimsList.innerHTML = wishlistItems.map(item => {
                        // Find claim for this item
                        const claim = claims.find(c => c.item_id === item.id);
                        let claimerName = 'Not claimed yet';
                        if (claim) {
                            // Lookup claimed_by in profiles table
                            claimerName = `<strong>Claimed by: ${claim.claimed_by}</strong>`;
                        }
                        return `
                            <div class="claim-item">
                                <div class="claim-item-name">${item.name}</div>
                                <div class="claim-item-claimer">${claimerName}</div>
                            </div>
                        `;
                    }).join('');
                }
                document.getElementById('spoilerSection').classList.add('active');
            }

            function hideSpoilers() {
                document.getElementById('spoilerSection').classList.remove('active');
            }

            async function logout() {
                if (confirm('Are you sure you want to logout?')) {
                    await supabase.auth.signOut();
                    window.location.href = 'login.html';
                }
            }
        </script>
    <script src="/assets/js/mobile-sidebar.js" defer></script>
</body>
</html>
